{
    "compilerOptions": {
        "composite": true,
        "module": "es2020",
        "target": "ES6",
        "moduleResolution": "node",
        "lib": ["esnext", "dom"],
        "jsx": "react",
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "removeComments": true,
        "downlevelIteration": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true
    }
}
